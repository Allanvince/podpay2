<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/menuBtnFragment"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuBtnFragment">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/profile"
       android:layout_centerHorizontal="true"
       android:textSize="18sp"
       android:fontFamily="sans-serif-black"
       android:textColor="@color/black"
       />

   <Button
       android:id="@+id/backButton"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:background="@drawable/baseline_arrow_back_24"
       android:layout_marginStart="5dp"
       />

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/cameraProfile"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:src="@drawable/camera"
       android:layout_marginStart="10dp"
       android:layout_marginTop="55dp"
       />
   <TextView
       android:id="@+id/nameOfPerson"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Full Name"
       android:textSize="17sp"
       android:padding="5dp"
       android:fontFamily="sans-serif-black"
       android:layout_marginTop="50dp"
       android:layout_marginStart="100dp"
       />
   <TextView
       android:id="@+id/phoneOfPerson"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="+254 7123456789"
       android:textSize="17sp"
       android:fontFamily="sans-serif-black"
       android:padding="5dp"
       android:layout_marginTop="78dp"
       android:layout_marginStart="100dp"
       />
   <TextView
       android:id="@+id/editTextButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/edit"
       android:textSize="17sp"
       android:textColor="@color/orangeRed"
       android:layout_marginTop="75dp"
       android:layout_marginStart="310dp"
       />
   <TextView
       android:id="@+id/lineBotom1"
       android:layout_width="match_parent"
       android:layout_height="4dp"
       android:background="@drawable/line_bottom"
       android:layout_below="@+id/cameraProfile"
       />

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/lineBotom1">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/wallet_balance"
             android:layout_marginStart="10dp"
             android:layout_marginTop="15dp"
             android:textSize="19sp"
             android:textColor="@color/black"
             android:fontFamily="sans-serif-black"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/ksh"
             android:textColor="@color/orangeRed"
             android:layout_marginTop="45dp"
             android:textSize="18sp"
             android:fontFamily="sans-serif"
             android:layout_marginStart="10dp"
             />
         <TextView
             android:id="@+id/menuBalanceView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/orangeRed"
             android:layout_marginTop="70dp"
             android:textSize="19sp"
             android:fontFamily="sans-serif-black"
             android:layout_marginStart="10dp"
             />
         <Button
             android:id="@+id/loadWalletButton"
             android:layout_width="150dp"
             android:layout_height="48dp"
             android:background="@drawable/shape_button1"
             android:layout_marginTop="30dp"
             android:layout_marginStart="200dp"
             android:text="Load Wallet"
             android:textColor="@color/white"
             android:textSize="15sp"
             android:fontFamily="sans-serif-black"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="4dp"
             android:layout_marginTop="115dp"
             android:background="@drawable/line_bottom"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/documents"
             android:textColor="@color/orangeRed"
             android:fontFamily="sans-serif-black"
             android:textSize="19sp"
             android:layout_marginTop="125dp"
             android:layout_marginStart="10dp"
             />
         <TextView
             android:id="@+id/endUserAgreement"
             android:layout_width="190dp"
             android:layout_height="wrap_content"
             android:text="@string/end_user_licence_agreement"
             android:fontFamily="sans-serif-black"
             android:textColor="@color/black"
             android:textSize="16sp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="160dp"
             app:drawableStartCompat="@drawable/collection"
             android:drawablePadding="10dp"
             />
         <TextView
             android:id="@+id/termsAndConditions"
             android:layout_width="190dp"
             android:layout_height="wrap_content"
             android:text="@string/terms_conditions"
             android:fontFamily="sans-serif-black"
             android:textColor="@color/black"
             android:textSize="16sp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="210dp"
             app:drawableStartCompat="@drawable/book"
             android:drawablePadding="10dp"
             />
         <TextView
             android:id="@+id/privacyPolicy"
             android:layout_width="190dp"
             android:layout_height="wrap_content"
             android:text="@string/privacy_policy"
             android:fontFamily="sans-serif-black"
             android:textColor="@color/black"
             android:textSize="16sp"
             android:layout_marginStart="10dp"
             android:layout_marginTop="265dp"
             app:drawableStartCompat="@drawable/privacy_tip"
             android:drawablePadding="10dp"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="4dp"
             android:layout_marginTop="300dp"
             android:background="@drawable/line_bottom"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/contact_us"
             android:textSize="19sp"
             android:textColor="@color/orangeRed"
             android:layout_marginTop="310dp"
             android:layout_marginStart="10dp"
             android:fontFamily="sans-serif-black"
             />
         <TextView
             android:id="@+id/whatsappIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/whatsapp"
             android:textSize="20sp"
             android:fontFamily="sans-serif-black"
             android:layout_marginTop="370dp"
             android:layout_marginStart="80dp"
             android:textColor="@color/black"
             />
         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/whatsapp_icon"
             android:layout_marginTop="340dp"
             />
         <TextView
             android:id="@+id/emailText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/email"
             android:textSize="20sp"
             android:fontFamily="sans-serif-black"
             android:layout_marginTop="430dp"
             android:layout_marginStart="80dp"
             android:textColor="@color/black"
             />
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/email_icon"
             android:layout_marginTop="420dp"
             android:layout_marginStart="15dp"
             />
         <TextView
             android:id="@+id/phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="+254708743094"
             android:autoLink="phone"
             android:linksClickable="true"
             android:textSize="20sp"
             android:fontFamily="sans-serif-black"
             android:layout_marginTop="500dp"
             android:layout_marginStart="80dp"
             android:textColor="@color/black"
             />
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/phone_icon"
             android:layout_marginTop="490dp"
             android:layout_marginStart="15dp"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="4dp"
             android:layout_marginTop="550dp"
             android:background="@drawable/line_bottom"
             />
         <Button
             android:id="@+id/logoutBtn"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:background="@drawable/shape_button1"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="580dp"
             android:text="@string/log_out"
             android:textColor="@color/white"
             android:textSize="15sp"
             android:fontFamily="sans-serif-black"
             />
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/line_bottom"
             android:layout_marginTop="645dp"
             />
      </RelativeLayout>
   </ScrollView>

</RelativeLayout>