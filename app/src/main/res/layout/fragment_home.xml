<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/depositMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deposit_money"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="240dp"
            android:textColor="@color/orangeRed"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardElevation="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_button2"
            app:strokeColor="@color/orangeRed"
            app:strokeWidth="0.5dp"
            app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/productText"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/product_purchased_with_transaction_charges"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ksh"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="90dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ksh"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="90dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="120dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="110dp"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="110dp"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="120dp"
                            />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/purchase_amount"
                            android:textColor="@color/black"
                            android:layout_marginTop="135dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="25dp"
                            />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_progress"
                            android:textColor="@color/black"
                            android:layout_marginTop="135dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="120dp"
                            />
                        <TextView
                            android:id="@+id/walletBalanceText"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="225dp"
                            android:text="@string/wallet_balance"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ksh"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="90dp"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="225dp"
                            />
                        <TextView
                            android:id="@+id/balanceDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="110dp"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="225dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_charge_amount"
                            android:textColor="@color/black"
                            android:layout_marginTop="135dp"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="225dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ksh 20"
                            android:textColor="@color/orangeRed"
                            android:layout_marginTop="155dp"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginStart="235dp"
                            />
                </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

