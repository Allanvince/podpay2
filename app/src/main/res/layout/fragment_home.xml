        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="610dp"
            android:layout_marginTop="210dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"
                            android:text="@string/operations"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="80dp"
                            >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:padding="5dp">

                                        <Button
                                            android:id="@+id/buyAirtimeBtn"
                                            android:layout_width="110dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button1"
                                            android:text="@string/buy_airtime"
                                            android:drawableTop="@drawable/baseline_attach_money_24"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:textColor="@color/white"
                                            />
                                        <Button
                                            android:id="@+id/payBillBtn"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button1"
                                            android:drawableTop="@drawable/baseline_attach_money_24"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:text="@string/paybill"
                                            android:textColor="@color/white"
                                            />
                                        <Button
                                            android:id="@+id/sendToBankBtn"
                                            android:layout_width="112dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button1"
                                            android:drawableTop="@drawable/baseline_attach_money_24"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:text="@string/send_to_bank"
                                            android:textColor="@color/white"
                                            />
                                        <Button
                                            android:id="@+id/withDrawBtn"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button1"
                                            android:drawableTop="@drawable/baseline_attach_money_24"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:text="@string/withdraw_to_mobile_money"
                                            android:textColor="@color/white"
                                            />
                                        <Button
                                            android:id="@+id/tucashBtn"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button1"
                                            android:drawableTop="@drawable/baseline_attach_money_24"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:text="@string/podPAY_to_podPAY"
                                            android:textColor="@color/white"
                                            />
                                </LinearLayout>

                        </HorizontalScrollView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shopping"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-black"
                            android:textSize="18sp"
                            android:layout_marginTop="170dp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/shape_button4"
                            android:layout_marginTop="210dp"
                            android:layout_marginStart="10dp"
                            />

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="@string/what_will_you_buy_with_your_transaction_charges_today"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-black"
                            android:textSize="20sp"
                            android:layout_marginTop="225dp"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            />
                        <Button
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/search"
                            android:text="@string/search"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_button3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="290dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tucash_categories"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="390dp"
                            android:fontFamily="sans-serif-black"
                            />
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="440dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/buttonFood"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:text="@string/food"
                                            android:background="@drawable/shape_button5"
                                            android:drawableTop="@drawable/food"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:textColor="@color/black"
                                            />
                                        <Button
                                            android:id="@+id/buttonFashion"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:text="@string/fashion"
                                            android:background="@drawable/shape_button5"
                                            android:drawableTop="@drawable/fashion"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:textColor="@color/black"
                                            />

                                        <Button
                                            android:id="@+id/buttonInsurance"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/shape_button5"
                                            android:drawableTop="@drawable/monitor_heart"
                                            android:text="@string/insurance"
                                            android:textColor="@color/black" />

                                        <Button
                                            android:id="@+id/buttonUtilities"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:text="@string/utilities"
                                            android:background="@drawable/shape_button5"
                                            android:drawableTop="@drawable/warehouse"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:textColor="@color/black"
                                            />
                                        <Button
                                            android:id="@+id/buttonElectronics"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:text="@string/electronics"
                                            android:background="@drawable/shape_button5"
                                            android:drawableTop="@drawable/cable"
                                            style="?android:attr/buttonBarButtonStyle"
                                            android:textColor="@color/black"
                                            />
                                </LinearLayout>

                        </HorizontalScrollView>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/line_bottom"
                            android:layout_marginTop="525dp"
                            />
                </RelativeLayout>

        </ScrollView>


</RelativeLayout>