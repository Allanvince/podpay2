<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecaptchaActivity">

    <TextView
        android:id="@+id/tuCashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/podPAY"
        android:textSize="18sp"
        android:fontFamily="@font/alba2"
        android:textColor="@color/orangeRed"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/recap"
        android:layout_below="@+id/tuCashText"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_the_podPAY_logo"
        android:textSize="18sp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/orangeRed"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recapTuCashLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/podpay"
        android:layout_marginTop="250dp"
        android:layout_marginStart="210dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recapDollarLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/monetization"
        android:layout_marginTop="250dp"
        android:layout_marginStart="120dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recapDollarSignLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/money"
        android:layout_marginTop="330dp"
        android:layout_marginStart="210dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recapPayLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pay"
        android:layout_marginTop="330dp"
        android:layout_marginStart="120dp"
        />
</RelativeLayout>